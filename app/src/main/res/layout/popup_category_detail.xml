<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/container_home"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container_home"
        android:padding="5dp">

        <TextView
            android:id="@+id/category_detail_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Transazioni registrate per "
            app:drawableStartCompat="@drawable/list_numbered_icon"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/title_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/category_detail_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="--"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:textColor="@color/black" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container_home"

        android:layout_marginTop="5pt"
        app:layout_constraintTop_toBottomOf="@id/container_title"
        app:layout_constraintBottom_toTopOf="200dp"
        app:layout_constraintStart_toStartOf="parent"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_popup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/TextStyle"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />
    </LinearLayout>



</LinearLayout>