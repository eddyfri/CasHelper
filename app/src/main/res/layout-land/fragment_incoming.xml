<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/constraint_incoming"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.CasHelper"
    android:background="?attr/backgroundColor">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline25_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/midline_incoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>
    <TextView
        android:id="@+id/month_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/month"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/midline_incoming"
        app:layout_constraintBottom_toTopOf="@id/guideline25_horizontal"
        android:layout_margin="2pt"
        style = "@style/DateStyle"/>

    <TextView
        android:id="@+id/year_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/year"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/midline_incoming"
        app:layout_constraintBottom_toTopOf="@id/guideline25_horizontal"
        android:layout_margin="2pt"
        style = "@style/DateStyle"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/back_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:theme="@style/Theme.CasHelper"
        app:backgroundTint="?attr/colorBackgroundFloating"
        app:icon="@drawable/baseline_arrow_back"
        android:contentDescription="@string/back_month_button"
        app:elevation="0dp"
        android:layout_marginStart="5pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline25_horizontal"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/next_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:theme="@style/Theme.CasHelper"
        app:backgroundTint="?attr/colorBackgroundFloating"
        app:icon="@drawable/baseline_arrow_next"
        android:contentDescription="@string/next_month_button"
        app:elevation="0dp"
        android:layout_marginEnd="5pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline25_horizontal"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_pie_chart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/container_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline25_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/midline_incoming"
        android:layout_marginStart="10pt"
        android:layout_marginEnd="10pt"
        android:layout_marginBottom="5pt"
        android:layout_marginTop="5pt"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/empty_chart_text_incoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty_chart_string"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:theme="@style/TextStyle"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart_incoming"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.5"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/container_home"
        android:layout_margin="10pt"
        app:layout_constraintTop_toBottomOf="@id/guideline25_horizontal"
        app:layout_constraintStart_toEndOf="@id/midline_incoming"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_empty_list_incoming"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/empty_icon_incoming"
                android:layout_width="100dp"
                android:layout_height="125dp"
                android:src="@drawable/empty"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/empty_img"
                />
            <TextView
                android:id="@+id/empty_text_incoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stringTransaction"
                android:theme="@style/TextStyle"
                app:layout_constraintTop_toBottomOf="@id/empty_icon_incoming"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/TextStyle"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
